<?xml version="1.0" encoding="UTF-8"?>
<T3DataStructure>
    <meta>
        <langDisable>1</langDisable>
    </meta>
    <sheets>
        <sDEF>

            <ROOT>
                <TCEforms>
                    <sheetTitle>Show</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <display>
                        <TCEforms>
                            <label>Display mode</label>
                            <onChange>reload</onChange>
                            <config>
                                <type>select</type>
                                <indexField>title</indexField>
                                <sortField>title</sortField>
                                <itemsProcFunc>tx_tendflickr_pi1->getViewsListForFlexForm</itemsProcFunc>
                            </config>
                        </TCEforms>
                    </display>

                    <!--

                        photossearch

                    -->
                    
                    <photossearch_user_id>
                        <TCEforms>
                            <label>user_id (Must be NSID!) (optional)</label>
                            <displayCond>FIELD:display:=:photossearch</displayCond>
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <default>restFlickr_People_findByUsername(username=Oto Brglez)["user"]["nsid"]</default>
                            </config>
                        </TCEforms>
                    </photossearch_user_id>

                    <photossearch_tags>
                        <TCEforms>
                            <label>tags (optional)</label>
                            <displayCond>FIELD:display:=:photossearch</displayCond>
                            <config>
                                <type>input</type>
                                <size>50</size>
                            </config>
                        </TCEforms>
                    </photossearch_tags>

                    <photossearch_tag_mode>
                        <TCEforms>
                            <label>tag_mode (optional)</label>
                            <displayCond>FIELD:display:=:photossearch</displayCond>
                            <config>
                                <type>input</type>
                                <size>50</size>
                            </config>
                        </TCEforms>
                    </photossearch_tag_mode>

                    <photossearch_text>
                        <TCEforms>
                            <label>text (optional)</label>
                            <displayCond>FIELD:display:=:photossearch</displayCond>
                            <config>
                                <type>input</type>
                                <size>50</size>
                            </config>
                        </TCEforms>
                    </photossearch_text>

                    <photossearch_sort>
                        <TCEforms>
                            <label>sort</label>
                            <displayCond>FIELD:display:=:photossearch</displayCond>
                            <config>
                                <type>select</type>
                                <items type="array">
                                    <numIndex index="0" type="array">
                                        <numIndex index="0">date-posted-desc (default)</numIndex>
                                        <numIndex index="1">date-posted-desc</numIndex>
                                    </numIndex>
                                    <numIndex index="1" type="array">
                                        <numIndex index="0">relevance</numIndex>
                                        <numIndex index="1">relevance</numIndex>
                                    </numIndex>
                                    <numIndex index="2" type="array">
                                        <numIndex index="0">date-posted-asc</numIndex>
                                        <numIndex index="1">date-posted-asc</numIndex>
                                    </numIndex>
                                    <numIndex index="3" type="array">
                                        <numIndex index="0">date-taken-asc</numIndex>
                                        <numIndex index="1">date-taken-asc</numIndex>
                                    </numIndex>
                                    <numIndex index="4" type="array">
                                        <numIndex index="0">date-taken-desc</numIndex>
                                        <numIndex index="1">date-taken-desc</numIndex>
                                    </numIndex>
                                    <numIndex index="5" type="array">
                                        <numIndex index="0">interestingness-desc</numIndex>
                                        <numIndex index="1">interestingness-desc</numIndex>
                                    </numIndex>
                                    <numIndex index="6" type="array">
                                        <numIndex index="0">interestingness-asc</numIndex>
                                        <numIndex index="1">interestingness-asc</numIndex>
                                    </numIndex>
                                </items>
                            </config>
                        </TCEforms>
                    </photossearch_sort>

                    <photossearch_per_page>
                        <TCEforms>
                            <label>per_page (optional)</label>
                            <displayCond>FIELD:display:=:photossearch</displayCond>
                            <config>
                                <type>input</type>
                                <size>5</size>
                            </config>
                        </TCEforms>
                    </photossearch_per_page>

                    <photossearch_page>
                        <TCEforms>
                            <label>page (optional)</label>
                            <displayCond>FIELD:display:=:photossearch</displayCond>
                            <config>
                                <type>input</type>
                                <size>5</size>
                            </config>
                        </TCEforms>
                    </photossearch_page>

                    <!--

                        photosets

                    -->

                    <photosets_user_id>
                        <TCEforms>
                            <label>user_id (Must be NSID!) (required)</label>
                            <displayCond>FIELD:display:=:photosets</displayCond>
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <default>restFlickr_People_findByUsername(username=Oto Brglez)["user"]["nsid"]</default>
                            </config>
                        </TCEforms>
                    </photosets_user_id>

                    <photosets_goto_pid>
                        <TCEforms>
                            <exclude>1</exclude>
                            <label>Photoset view</label>
                             <displayCond>FIELD:display:=:photosets</displayCond>
                            <config>
                                <type>group</type>
                                <internal_type>db</internal_type>
                                <allowed>pages</allowed>
                                <size>3</size>
                                <maxitems>22</maxitems>
                                <minitems>0</minitems>
                                <show_thumbs>1</show_thumbs>
                            </config>
                        </TCEforms>
                    </photosets_goto_pid>

                    <!--

                        viewphotoset

                    -->

                    <viewphotoset_user_id>
                        <TCEforms>
                            <label>user_id (Must be NSID!) (required)</label>
                            <displayCond>FIELD:display:=:viewphotoset</displayCond>
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <default>restFlickr_People_findByUsername(username=Oto Brglez)["user"]["nsid"]</default>
                            </config>
                        </TCEforms>
                    </viewphotoset_user_id>

                    <vps_show_desc>
                        <TCEforms>
                            <label>Show photoset description</label>
                            <displayCond>FIELD:display:=:viewphotoset</displayCond>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </vps_show_desc>


                    <vps_show_picker>
                          <TCEforms>
                            <label>Show photoset picker</label>
                            <displayCond>FIELD:display:=:viewphotoset</displayCond>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </vps_show_picker>

                    <vps_show_photoset_list>
                          <TCEforms>
                            <label>Show photoset list</label>
                            <displayCond>FIELD:display:=:viewphotoset</displayCond>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </vps_show_photoset_list>
                    
                    <vps_default>
                        <TCEforms>
                            <label>Default photoset</label>
                            <displayCond>FIELD:display:=:viewphotoset</displayCond>
                            <config>
                                <type>select</type>
                                <indexField>title</indexField>
                                <sortField>title</sortField>
                                <itemsProcFunc>tx_tendflickr_pi1->getPhotosetsForFlexForm</itemsProcFunc>
                            </config>
                        </TCEforms>
                    </vps_default>

                </el>
            </ROOT>
        </sDEF>
        <!--

            DISPLAY
            
        -->
        <display>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Flickr</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <api_key>
                        <TCEforms>
                            <label>Flickr API Key</label>
                            <config>
                                <type>input</type>
                                <size>32</size>
                            </config>
                        </TCEforms>
                    </api_key>
                    <api_cache>
                        <TCEforms>
                            <label>Flickr Response Cache time (in seconds)</label>
                            <config>
                                <type>input</type>
                                <size>10</size>
                                <default>100</default>
                                <eval>num</eval>
                            </config>
                        </TCEforms>

                    </api_cache>
                </el>
            </ROOT>
        </display>
        <!--

            SMARTY

        -->
        <smarty>
            <ROOT>
                <TCEforms>
                    <sheetTitle>Smarty</sheetTitle>
                </TCEforms>
                <type>array</type>
                <el>
                    <smarty_debugging>
                        <TCEforms>
                            <label>debugging</label>
                            <config>
                                <type>check</type>
                            </config>
                        </TCEforms>
                    </smarty_debugging>

                    <smarty_template_dir>
                        <TCEforms>
                            <label>Template directory</label>
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <default>EXT:tend_flickr/res/templates</default>
                            </config>
                        </TCEforms>
                    </smarty_template_dir>
                    <smarty_error_reporting>
                        <TCEforms>
                            <label>error_reporting</label>
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <default>E_ALL</default>
                            </config>
                        </TCEforms>
                    </smarty_error_reporting>

                    <smarty_debugging_ctrl>
                        <TCEforms>
                            <label>debugging_ctrl</label>
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <default>NONE</default>
                            </config>
                        </TCEforms>
                    </smarty_debugging_ctrl>

                    <smarty_debug_tpl>
                        <TCEforms>
                            <label>debug_tpl</label>
                            <config>
                                <type>input</type>
                                <size>50</size>
                                <default>EXT:smarty/debug/smarty_debug.tpl</default>
                            </config>
                        </TCEforms>
                    </smarty_debug_tpl>

                    <smarty_compile_check>
                        <TCEforms>
                            <label>compile_check</label>
                            <config>
                                <type>check</type>
                                <default>1</default>
                            </config>
                        </TCEforms>
                    </smarty_compile_check>


                    <smarty_force_compile>
                        <TCEforms>
                            <label>force_compile</label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </smarty_force_compile>

                    <smarty_caching>
                        <TCEforms>
                            <label>caching</label>
                            <config>
                                <type>check</type>
                                <default>0</default>
                            </config>
                        </TCEforms>
                    </smarty_caching>


                    <smarty_plugins_dir>
                        <TCEforms>
                            <label>plugins_dir</label>
                            <config>
                                <type>input</type>
                                <default>EXT:smarty/typo3_plugins</default>
                            </config>
                        </TCEforms>
                    </smarty_plugins_dir>

                    <smarty_cache_dir>
                        <TCEforms>
                            <label>cache_dir</label>
                            <config>
                                <type>input</type>
                                <default>typo3temp/smarty_cache</default>
                            </config>
                        </TCEforms>
                    </smarty_cache_dir>

                    <smarty_compile_dir>
                        <TCEforms>
                            <label>compile_dir</label>
                            <config>
                                <type>input</type>
                                <default>typo3temp/smarty_compile</default>
                            </config>
                        </TCEforms>
                    </smarty_compile_dir>

                </el>
            </ROOT>
        </smarty>
    </sheets>
</T3DataStructure>
